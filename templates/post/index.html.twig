{% extends 'base.html.twig' %}


{% block body %}

	{% for post in posts %}
		<div class="card" style="width: 18rem;">
			<img class="card-img-top" src="{{ post.picture }}" alt="{{ post.title }}">
			<div class="card-body">
				<h5 class="card-title">{{ post.title }}</h5>
				<p class="card-text">{{ post.content }}</p>
			</div>
			<div class="card-body">
				<a href="{{ path('post_list')}}" class="card-link">Consulter le post</a>
			</div>
		{% else %}
			<li class="list-group-item">Aucun post trouv√©.</li>
		{% endfor %}

{% endblock %}
